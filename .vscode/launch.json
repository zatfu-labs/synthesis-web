  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Website Locally",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\app",
      "serverReadyAction": {
        "pattern": "[INFO] App listening at ([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}
